<assembly>
  <id>distribution</id>
  <formats>
    <format>tar.gz</format>
  </formats>

  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <includes>
        <include>*:war</include>
      </includes>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <outputDirectory>conf</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0744</fileMode>
      <directory>conf</directory>
      <excludes>
	      <exclude>ocp/</exclude>
	      <exclude>poc-middleware-local.yaml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <outputDirectory>.</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0744</fileMode>
      <includes>
          <include>CHANGELOG.md</include>
      </includes>
    </fileSet>
  </fileSets>


</assembly>

